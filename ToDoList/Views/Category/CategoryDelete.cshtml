@model ItemCategory

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Delete Category</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center">Are you sure you want to delete this?</h5>
                    <hr />
                    <div class="mb-3">
                        <strong>ID:</strong> <span>@Model.Id</span>
                    </div>
                    <div class="mb-3">
                        <strong>Title:</strong> <span>@Model.Title</span>
                    </div>
                    <form asp-action="Delete" asp-controller="Category" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="CategoryList" class="btn btn-secondary btn-lg">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
