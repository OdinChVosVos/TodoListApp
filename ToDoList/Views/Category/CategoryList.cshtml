@model IEnumerable<ItemCategory>

@{
    ViewData["Title"] = "Category List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Category List</h2>
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="CategoryCreate" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-striped shadow-sm">
            <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td class="text-center">
                        <a asp-action="CategoryEdit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="CategoryDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm me-2">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="CategoryDelete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
