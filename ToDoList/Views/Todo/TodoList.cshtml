@model IEnumerable<TodoItem>

@{
    ViewData["Title"] = "Todo List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Todo List</h2>
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="TodoCreate" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-striped shadow-sm">
            <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Completed</th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Category?.Title</td>
                    <td>
                            <span class="badge @(item.IsComplete ? "bg-success" : "bg-danger")">
                                @(item.IsComplete ? "Yes" : "No")
                            </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="TodoEdit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="TodoDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm me-2">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="TodoDelete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
